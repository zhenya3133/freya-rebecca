From 45689f78b607aff3b00c54d4baba5ec11223ea1e Mon Sep 17 00:00:00 2001
From: zhenya3133 <verbenkoe@gmail.com>
Date: Mon, 22 Sep 2025 16:19:57 +0300
Subject: [PATCH 02/14] chore(vscode): workspace settings & recommendations

---
 apps/web/.editorconfig           | 11 +++++++++++
 apps/web/.vscode/extensions.json | 19 +++++++++++++++++++
 apps/web/.vscode/settings.json   | 22 ++++++++++++++++++++++
 3 files changed, 52 insertions(+)
 create mode 100644 apps/web/.editorconfig
 create mode 100644 apps/web/.vscode/extensions.json
 create mode 100644 apps/web/.vscode/settings.json

diff --git a/apps/web/.editorconfig b/apps/web/.editorconfig
new file mode 100644
index 0000000..09c2944
--- /dev/null
+++ b/apps/web/.editorconfig
@@ -0,0 +1,11 @@
+root = true
+
+[*]
+end_of_line = lf
+insert_final_newline = true
+charset = utf-8
+indent_style = space
+indent_size = 2
+
+[*.md]
+trim_trailing_whitespace = false
diff --git a/apps/web/.vscode/extensions.json b/apps/web/.vscode/extensions.json
new file mode 100644
index 0000000..e85f04e
--- /dev/null
+++ b/apps/web/.vscode/extensions.json
@@ -0,0 +1,19 @@
+{
+  "recommendations": [
+    "ms-vscode-remote.remote-wsl",
+    "ms-vscode-remote.remote-containers",
+    "ms-azuretools.vscode-docker",
+    "dbaeumer.vscode-eslint",
+    "esbenp.prettier-vscode",
+    "EditorConfig.EditorConfig",
+    "bradlc.vscode-tailwindcss",
+    "mikestead.dotenv",
+    "eamodio.gitlens",
+    "usernamehw.errorlens",
+    "oderwat.indent-rainbow",
+    "streetsidesoftware.code-spell-checker",
+    "cweijan.vscode-postgresql",
+    "humao.rest-client",
+    "yzhang.markdown-all-in-one"
+  ]
+}
diff --git a/apps/web/.vscode/settings.json b/apps/web/.vscode/settings.json
new file mode 100644
index 0000000..fb22519
--- /dev/null
+++ b/apps/web/.vscode/settings.json
@@ -0,0 +1,22 @@
+{
+  "files.eol": "\n",
+  "files.insertFinalNewline": true,
+  "editor.formatOnSave": true,
+  "editor.codeActionsOnSave": {
+    "source.fixAll.eslint": "explicit",
+    "source.organizeImports": "explicit"
+  },
+  "prettier.singleQuote": true,
+  "prettier.trailingComma": "all",
+  "prettier.printWidth": 100,
+  "eslint.useFlatConfig": true,
+  "eslint.validate": ["typescript", "typescriptreact", "javascript", "json"],
+  "typescript.tsdk": "node_modules/typescript/lib",
+  "tailwindCSS.experimental.classRegex": [
+    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^'\"`]*)(?:'|\"|`)"],
+    ["cva\\(([^)]*)\\)", "(?:'|\"|`)([^'\"`]*)(?:'|\"|`)"]
+  ],
+  "editor.defaultFormatter": "esbenp.prettier-vscode",
+  "markdown.preview.breaks": true,
+  "editor.tabSize": 2
+}
