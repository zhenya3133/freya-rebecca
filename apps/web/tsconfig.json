{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["src/lib/*"]
    },

    "types": ["node"],

    "plugins": [{ "name": "next" }]
  },

  // ВАЖНО: whitelist только рабочие части проекта
  "include": [
    "next-env.d.ts",

    // ядро
    "src/lib/**/*.ts",

    // единый ретривер RC-v1
    "src/app/api/retrieve/**/*.ts",

    // минимальные инжесты
    "src/app/api/ingest/url/**/*.ts",
    "src/app/api/ingest/pdf/**/*.ts",
    "src/app/api/ingest/github/**/*.ts",

    ".next/types/**/*.ts"
  ],

  // Явно исключаем всё «старое»/архивное, чтобы tsc не стрелялся
  "exclude": [
    "node_modules",
    "src/app/api/rag/**/*",
    "src/app/api/memory/**/*",
    "src/app/api/rebecca/**/*",
    "src/app/api/_archive/**/*",
    "src/app/api/maint/**/*",
    "src/app/api/diag/**/*",
    "src/app/api/ingest/youtube/**/*",
    "src/app/api/ingest/seed/**/*",
    "src/lib/rag-core.ts",
    "src/lib/suggestNs.ts"
  ]
}
