{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "noEmit": true,

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "jsx": "preserve",

    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"]
    },
    "plugins": [{ "name": "next" }],

    /* важно: пусть tsc ищет типы и тут, и на уровень выше (вдруг они захостятся в корне) */
    "typeRoots": ["./node_modules/@types", "../node_modules/@types", "../../node_modules/@types"]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "src/app/api/_archive/**",
    "src/app/api/rag/**",
    "src/app/api/memory/**",
    "src/lib/rag-core.ts"
  ]
}
